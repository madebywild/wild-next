{
  "name": "wild-next",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "clear": "rimraf .next && rimraf build && rimraf out && rimraf node_modules/.cache",
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "analyze": "npm run clear && ANALYZE=true npm run build",
    "start": "next start",
    "export": "npm run build && next export",
    "format": "prettier --write 'src/**/*.{json,md,css,scss,less}'",
    "lint": "tsc --noEmit && eslint --color 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "npm run lint -- --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npm run lint:fix"
    ],
    "src/**/*.{json,md,css,scss,less}": [
      "npm run format"
    ]
  },
  "dependencies": {
    "next": "10.0.6",
    "next-seo": "4.18.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "styled-components": "5.2.1",
    "twin.macro": "2.2.0"
  },
  "devDependencies": {
    "@madebywild/eslint-config": "0.2.1",
    "@madebywild/prettier-config": "0.1.0",
    "@next/bundle-analyzer": "10.0.6",
    "@svgr/webpack": "5.5.0",
    "@tailwindcss/aspect-ratio": "0.2.0",
    "@types/node": "14.14.22",
    "@types/react": "17.0.0",
    "@types/styled-components": "5.1.7",
    "@types/webpack-env": "1.16.0",
    "eslint": "7.19.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.3",
    "next-compose-plugins": "2.2.1",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "tailwindcss": "2.0.2",
    "typescript": "4.1.3"
  }
}
